<%- include('partials/header') -%>

  <body>
   
    <div class="container">
      <div class="form_wrapper">
        <h2 class="form-heading">
          Create Account
        </h2>
        <form action="/users/signup" method="POST" class="form">
          <label>Your name</label>
          <input type="text" name="name"  class="form-name"/>
          <label>Email*</label>
          <input type="email" name="email"  class="form-email" />
          <label>Password</label>
          <input type="password" name="password"  class="form-password"/>
          <label class="form-para">
            *We will send you a email to verify your email id.
            Message and Data rates may apply.
          </label>
        
          <input type="submit" value="Sign Up" class="form-btn"/>
        </form>
        
        <p class="form-para google-login">
          <a href="/auth/google">
            <i class="fab fa-google"></i>
            Sign in with Google
          </a>
        </p>

        <p class="form-para">
          Already have an account? <a href="/users/login">Sign in</a>
        </p>

      </div>
    </div>
  </body>
  
<%- include('partials/footer') -%>


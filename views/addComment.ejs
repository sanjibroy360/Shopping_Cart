<%-include('partials/header')-%>

<%-include('partials/navbar')-%>

<section class="add-comment-sec">
    <div class="container">
        <form action="/product/<%=productId%>/comment/add" method="POST">
            
            <label class="product-form-label">Add Review</label>
            <input type="text" name="title" class="product-input" placeholder="What's most important to know?"> 
            
            <label class="product-form-label">Description</label>
            <textarea name="description" rows="10" class="product-input" placeholder="What did you like or dislike? What did you use this product for?"></textarea>
    
            
            <input type="submit" class="product-submit-btn form-btn">
        </form>
        
    </div>
</section>

<%-include('partials/footer')-%>